<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="New Entry Defaults">

        <EditTextPreference
            app:key="default_title_key"
            app:title="@string/default_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="@string/default_time_value"
            app:entries="@array/default_time_entries"
            app:entryValues="@array/default_time_values"
            app:key="default_time_key"
            app:title="@string/default_time_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>